<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>{{ title }} - Qobo</title>
    <link rel="stylesheet" href="img/css/common.css">
    <link rel="stylesheet" href="theme/famfamfam-silk.min.css">
    <link rel="stylesheet" href="theme/silk-companion.min.css">
    <meta name="theme-color" content="#ff9800">
</head>
<body>
<div class="page">
    <div class="header-user">
        <div class="header-user-links">
            {% if is_user_logged_in %}
                <a class="menulink" href="/user.php?name={{ user_data.name }}">{{ user_data.name }}</a> -
                <a class="menulink" href="/settings.php">Settings</a> -
                {% if user_data.powerlevel > 2 %}
                    <a class="menulink" href="/admin.php">Admin panel</a> -
                {% endif %}
                <a class="menulink" href="/upload.php">Submit</a> -
                <a class="menulink" href="logout.php">Log out</a>
            {% else %}
                <a class="menulink" href="/login.php">Login</a> -
                <a class="menulink" href="/register.php">Register</a>
            {% endif %}
        </div>
    </div>
    <div class="header">
        <div class="header-logo">
            <a href="/index.php"><img alt="squareBracket" src="/img/qobo.gif"></a>
        </div>
        <div class="header-links">
            <a class="menulink" href="/browse.php">Browse</a> -
            <a class="menulink" href="/users.php">Users</a> -
            <a class="menulink" href="/community.php">Community</a>
        </div>
    </div>
    <form action="login.php" method="post" name="logout">
        <input type="hidden" name="action" value="logout">
    </form>
    <div class="page-contents">
        {% if user_ban_data %}
            <div class="banner banner-danger">
                <p>This account is banned for the following reason:</p>
                {{ user_ban_data.reason | markdown }}
            </div>
        {% endif %}
        {% if session.notif_message %}
            <div class="banner banner-{{ session.notif_color }}">
                <span class="{{ notification_icon(session.notif_color) }}" style="display: inline-block;"></span>
                {{ session.notif_message }}
            </div>
            {{ remove_notification() }}
        {% endif %}
        {% block content %}{% endblock %}
        <div class="footer">
            <p>Â© 2021-{{ 'now' | date('Y') }} squareOrange contributors.</p>
        </div>
    </div>
</div>
{% block scripts %}{% endblock %}
</body>
</html>