{% extends "_layout.twig" %}

{% set title = "Write journal" %}

	{% block content %}
        <div class="profile-box">
            <h1>Upload your submission</h1>
            <p style="margin: 0;">Please only upload works made by you, or for you. Make sure you have read the <a href="/guidelines.php">guidelines</a> first.</p>
        </div>
        <div class="content-box">
        <form name="uploadForm" id="uploadForm" method="post" action="write.php" enctype="multipart/form-data">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-input">
                        <label for="title">Title:</label>
                    <input type="text" class="form-submit" id="title" name="title" required>
                    </div>

                    <div class="form-input">
                        <label for="desc">Description:</label>
                        <textarea class="form-submit" name="desc" maxlength="2000"
                              form="uploadForm"
                              style="overflow:hidden;resize:vertical" rows="3" required></textarea>
                    </div>

                    <div class="form-button-container">
                        <input class="form-button-submit" type="submit" id="upload" name="upload"
                               value="Submit">
                    </div>
                </div>
            </div>
        </form>
        </div>
    {% endblock %}