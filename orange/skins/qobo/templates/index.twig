{% extends "_layout.twig" %}

{% set title = "Home" %}

{% block scripts %}
    <!-- it feels so stupid to do this -bluffingo 10/7/2023 -->
    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js" integrity="sha256-FZsW7H2V5X9TGinSjjwYJ419Xka27I8XPDmWryGlWtw=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css" integrity="sha256-5uKiXEwbaQh9cgd2/5Vp6WmMnsUr3VZZw0a8rKnOKNU=" crossorigin="anonymous">
    <script>
        document.addEventListener( 'DOMContentLoaded', function() {
            var elms = document.getElementsByClassName( 'splide' );

            for ( var i = 0; i < elms.length; i++ ) {
                new Splide( elms[ i ], {
                    perPage: 6,
                    rewind: true,
                    pagination: false,
                    breakpoints: {
                        1023 : { perPage: 3 },
                        767 : { perPage: 2 },
                    },
                } ).mount();
            }
        } );
    </script>
{% endblock %}

{% block precontent %}
    {# currently the home page banner is just "The Ultimate Chaziz Drawing" but streched
    as like a placeholder. only remove "show_work_in_progress_stuff" once a proper banner
    has been designed/drawn. -Bluffingo 12/9/2023 #}
    {% if show_work_in_progress_stuff %}
        <div class="jumbotron qobo-banner"></div>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="section">
        <div class="section-title">
            <h1>Recent Submissions</h1>
            <a href="browse.php">More</a>
        </div>
        <div class="content-box">
            <section class="splide" id="splide1" aria-labelledby="carousel-heading">
                <div class="splide__track">
                    <ul class="splide__list">
                        {% for submission in data.submissions_new %}
                            {{ include('/components/_index_submission_3.twig') }}
                        {% endfor %}
                    </ul>
                </div>
            </section>
        </div>
    </div>
    <div class="section">
        <div class="section-title">
            <h1>Random Submissions</h1>
            <a href="browse.php">More</a>
        </div>
        <div class="content-box">
            <section class="splide" id="splide2" aria-labelledby="carousel-heading">
                <div class="splide__track">
                    <ul class="splide__list">
                        {% for submission in data.submissions %}
                            {{ include('/components/_index_submission_3.twig') }}
                        {% endfor %}
                    </ul>
                </div>
            </section>
        </div>
    </div>
    {% if data.news_recent %}
        <div class="section">
            <div class="section-title">
                <h1>Site news</h1>
            </div>
            <div class="content-box">
                {% for news in data.news_recent %}
                    <div class="journal-entry">
                        <div class="journal-title">
                            <a href="read.php?j={{ news.id }}">
                                {{ news.title|u.truncate(100, '...') }}
                            </a>
                        </div>
                        <div class="journal-info">
                            {{ news.date | relative_time }}
                        </div>
                        <div class="journal-contents">
                        {{ news.post|u.truncate(250, '...') }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}