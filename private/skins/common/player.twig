<link rel="stylesheet" href="https://cdn.vidstack.io/player/theme.css" />
<link rel="stylesheet" href="https://cdn.vidstack.io/player/video.css" />
<script src="https://cdn.vidstack.io/player" type="module"></script>

{% if is_chaziz_sb %}
    {% set video = submission.file %}
{% else %}
    {% set video = "/dynamic/videos/" ~ submission.id ~ ".converted.mp4" %}
{% endif %}

<media-player title="{{ submission.title }}" src="{{ video }}">
    <media-provider></media-provider>
    <media-video-layout thumbnails="{{ thumbnail(submission.id, submission.type, submission.bools.custom_thumbnail) }}"></media-video-layout>
</media-player>