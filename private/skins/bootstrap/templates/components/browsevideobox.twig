<div class="card" style="margin-bottom:10px">
    <div class="card-body text-center">
        <div class="row"><a href="/view/{{ submission.video_id }}">
                <div class="col-lg-12" style="margin-bottom:15px">
                    <div class="img-thumbnail">
                        <img class="img-fluid"
                             src="{{ thumbnail(submission.id, submission.type, submission.bools.custom_thumbnail) }}">
                    </div>
                </div>
            </a>
            <div class="col-lg-12">
                <h4><a href="/view/{{ submission.video_id }}">{{ submission.title }}</a></h4>
                {# hack to prevent twig from outputing the number 1 #}
                {% if submission.views != 1 %}
                    {% set pluralViews = "s" %}
                {% endif %}
                <p>{{ user_link(submission.author) }} &bull; {{ submission.views }} view%s", [pluralViews]) }} &bull;
                    {{ submission.published | relative_time }}</p>
            </div>
        </div>
    </div>
</div>
