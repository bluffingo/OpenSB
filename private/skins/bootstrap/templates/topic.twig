{% extends "_layout.twig" %}

{% block title %}{{ post_data.title }}{% endblock %}

	{% block content %}
        {% for post in post_data %}
            <div class="card">
                <div class="card-header">
                    {{ post.title }}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            USER ID: {{ post.author }} (FIX LATER)
                            <img class="float-start rounded w-75" src="{{ profile_picture(post.author) }}">
                        </div>
                        <div class="col-md-10">
                            {{ post.content }}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endblock %}
