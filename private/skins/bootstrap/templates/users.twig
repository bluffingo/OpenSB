{% extends "_layout.twig" %}

{% block title %}Browse{% endblock %}

	{% block content %}
        <div class="alert alert-primary">TODO: Redesign this so that it doesn't look like utter garbage.</div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-dark text-white">Members</div>
                    <div class="card-body">
                        {% for user1 in users.users|batch(4) %}
                            <div class="row">
                                {% for user in user1 %}
                                    <div class="col-3">
                                        <div class="card" style="margin-bottom:10px">
                                            <div class="card-body text-center">
                                                <div class="row"><a href="/user/{{ user.info.username }}">
                                                        <div class="col-lg-12" style="margin-bottom:15px">
                                                            <div class="img-thumbnail">
                                                                <img class="img-fluid rounded-circle"
                                                                     src="{{ profile_picture(user.info.username) }}">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <h4>{{ user.info.username }}</h4>
                                                        </div>
                                                    </a></div>
                                            </div>
                                        </div>

                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>No users.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
