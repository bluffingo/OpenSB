<div id="masthead-container">
    <div id="masthead">
        <div class="grid" style="gap:0px;margin-bottom: 17.5px;">
            <div class="col-md-10">
                {% if isMaintenance != true %}
                    <form id="masthead-search" style="display:none" action="/search.php">
                        <button id="search-btn" class="button button-secondary">
                            <span>{{ icon("search", 16) }}</span>
                        </button>
                        <div id="masthead-search-terms">
                            <label><input type="text" name="tags" placeholder="{{ __("Search...") }}"></label>
                        </div>
                    </form>
                {% endif %}
                <div id="header-main">
                    {% if isMaintenance != true %}
                        <div class="button button-neutral-invis guide-button"
                             id="guide-toggle">{{ icon("list", 20) }}</div>
                    {% endif %}
                    <a href="/" id="logo-container"><img id="logo" src="{{ website_branding.assets_location }}/logo-wordmark{% if theme == 'dark' %}-dark{% endif %}.png" alt="{{ website_branding.name }}"></a>
                </div>
            </div>
            {% if isMaintenance != true %}
                <div class="col-md-6" style="text-align: right;">
                    <button id="showSearch" onclick="showSearch()" class="button button-secondary-invis"
                            style="margin-right: 0.5rem;">
                        <span>{{ icon("search", 20) }}</span>
                    </button>
                    <div style="margin:0;{% if log %}width:1.5rem{% endif %}"
                         id="{% if log %}masthead-loggedin{% else %}masthead-signin{% endif %}" class="masthead-user">
                        {% if log %}
                            <div style="margin-top: 4px;">
                                <img class="rounded img-fluid" src="{{ profile_image(userdata.name) }}" alt="{{ userdata.name }}">
                                <!-- <div {% if notification_count > 0 %}class="bg-danger text-light"{% else %}class="bg-neutral{% endif %}" style="padding:6px 8px;display: inline-block;">{{ notification_count }}</div> -->
                                <div class="usermenushit" id="masthead-below">
                                    <ul style="padding:0">
                                        <li><a href="user.php?name={{ userdata.name }}">{{ __("Profile") }}</a></li>
                                        <li><a href="/settings.php">{{ __("Settings") }}</a></li>
                                        <li><a href="logout.php">{{ __("Log out") }}</a></li>
                                    </ul>
                                </div>
                            </div>
                        {% else %}
                            <div style="display: flex;justify-content: center;align-items: center;gap: 5px;margin-top: 2px;">
                                <a href="../login.php">{{ __("Login") }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
