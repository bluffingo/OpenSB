{% extends "_layout.twig" %}

{% block title %}{{ __("Login") }}{% endblock %}

	{% block content %}
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
            <br>
        {% elseif resetted %}
            <div class="alert alert-success"
                 role="alert">{{ __("Password successfully reset! Please login with your new password.") }}</div>
            <br>
        {% elseif new_pass %}
            <div class="alert alert-success"
                 role="alert">{{ __("Password successfully reset! Please login with your new password.") }}</div>
            <br>
        {% elseif new_token %}
            <div class="alert alert-success"
                 role="alert">{{ __("You have been successfully logged out of all devices.") }}</div>
            <br>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-body">
                <form method="post" name="loginForm" id="loginForm" action="login.php" class="form-signin">
                    <div class="form-group">
                        <label for="email">{{ __("Username") }}</label>
                        <input type="text" name="username" class="form-control" placeholder="{{ __("Username") }}">
                    </div>

                    <div class="form-group">
                        <label for="email">{{ __("Password") }}</label>
                        <input type="password" name="password" class="form-control" placeholder="{{ __("Password") }}">
                    </div>
                    <input class="btn btn-lg btn-primary" type="submit" value="{{ __("Login") }}"
                           name="loginsubmit">
                </form>
            </div>
        </div>
    {% endblock %}
