{% extends "_layout.twig" %}

{% block title %}{{ query }}{% endblock %}

	{% block content %}
        <div class="page-header">
            <h1>{{ query }}</h1>
        </div>
        {% for video in videos %}
            {{ small_video_box(video) }}
        {% else %}
            <div class="alert alert-danger" role="alert">{{ __("There are no submissions that match your query.") }}</div>
        {% endfor %}

        {% if type == 'all' %}
            {% set le_url = 'browse.php?page=%s' %}
        {% else %}
            {% set le_url = 'browse.php?type=' ~ type ~ '&page=%s' %}
        {% endif %}
        {{ pagination(level_count, glob_lpp, le_url, page) }}

        <br><br>
    {% endblock %}