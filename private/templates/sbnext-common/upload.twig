{% extends "_layout.twig" %}

{% block title %}{{ __("Upload") }}{% endblock %}

	{% block content %}
        <form name="uploadForm" id="uploadForm" method="post" action="upload.php" enctype="multipart/form-data">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2 style="margin-bottom: 0.5em;">{{ __("Upload a submission") }}</h2>
                    <p>{{ __("Enter the necessary information and select a file for your submission.") }}</p>
                    <h4 style="margin-bottom: 0.5em;">{{ __("Title") }}</h4>
                    <input type="text" class="form-control form-long uploader-form" id="title" name="title" required>
                    <br>
                    <h4 style="margin-bottom: 0.5em;">{{ __("Description") }}</h4>
                    <textarea class="form-control form-long uploader-form" name="desc" maxlength="2000"
                              form="uploadForm"
                              style="overflow:hidden;resize:vertical" rows="3" required></textarea>
                    <br>
                    <h4 style="margin-bottom: 0.5em;">{{ __("Tags (optional)") }}</h4>
                    <input type="text" class="form-control form-long uploader-form" name="tags">
                    <h2 style="margin-bottom: 0.5em;">{{ __("Select file") }}</h2>
                    <p>{{ __("Most common video and image formats are supported.") }}</p>
                    <input class="form-control" type="file" name="fileToUpload" id="fileToUpload" required>
                    <br>
                    {% if isDebug %}
                        <label class="checkbox">
                            <input type="checkbox" id="debugUploaderSkip" name="debugUploaderSkip">
                            {{ __("Skip processing (Debug, MP4 only)") }}
                        </label>
                    {% endif %}
                    <div class="text-right">
                        <input class="btn btn-primary" type="submit" id="upload" name="upload"
                               value="{{ __("Upload") }}">
                    </div>
                </div>
            </div>
        </form>
    {% endblock %}