{% extends "_layout.twig" %}

{% block title %}Statistics{% endblock %}

	{% block content %}
	<div class="card">
		<div class="card-body">
		<div style="padding:5px;">
		<h2>About cheeseRox</h2>
		<p>Yes, they were originally in the footer but I moved them here since checking the number of everything when
		a user loads something on cheeseRox is dumb.</p>
		</div>
		<div class="grid">
			<div class="col-md-3"><div class="statbox">
			<div class="stat-title">Users</div>
			{{ stats.usercount }}
			</div></div>
			<div class="col-md-3"><div class="statbox">
			<div class="stat-title">Videos</div>
			{{ stats.videocount }}
			</div></div>
			<div class="col-md-3"><div class="statbox">
			<div class="stat-title">Images</div>
			{{ stats.musiccount }}
			</div></div>
			<div class="col-md-3"><div class="statbox">
			<div class="stat-title">Music</div>
			{{ stats.imagecount }}
			</div></div>
		</div>
		</div>
	</div>
	{% endblock %}
