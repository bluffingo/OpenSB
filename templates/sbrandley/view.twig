{% extends "_layout.twig" %}
{% block title %}{{ image.title }}{% endblock %}
{% block content %}
<div class="watchNext">
	<div class="grid">
		<div class="col-md-8">
			<img src="{{ image.file }}" class="img-fluid" alt="{{ image.title }}">
			<div class="card card-body-fat" style="margin:0;border-bottom:none;padding-bottom:0;">
			<h1>{{ image.title }}</h1>
			  <div class="grid">
               <div class="col-md-6">
                  <img src="{{ profile_image(image.u_name) }}" class="rounded" style="width:48px;float: left;margin-right:8px;">
                  <a href="user.php?name={{ image.u_name }}"><b style="height: 20px;display: inline-block;">{{ image.u_name }}</b></a>
                  <br>
                  {% if userdata.id == image.author %}<a class="button button-secondary button-small">Channel settings</a>{% else %}
                  <button id="subscribe-watch" class="button button-{% if subscribed %}secondary{% else %}primary{% endif %} button-small" type="button" {% if not log or userdata.id == image.author %}disabled{% endif %}>{% if subscribed %}{{ __("Unfollow") }}{% else %}{{ __("Follow") }}{% endif %}</button>
                  <div class="subscribe-count">{{ subCount }}</div>
                  {% endif %}
                  <br>
               </div>
               <div class="col-md-6 right">
                  <h1 class="viewcount">{{ viewCount }}</h1>
                  <div class="likesaber">
                     <div class="like" style="width:{{ videoRatio }}%"></div>
                  </div>
                  <div class="below-likesaber">{{ icon("hand-thumbs-up-fill", 12) }} {{ total_likes }} {{ icon("hand-thumbs-down-fill", 12) }} {{ total_dislikes }}  </div>
               </div>
            </div>
			</div>
		<div class="card card-body-fat">
			<div class="grid">
				 <div class="col-md-12">
					<div id="About" class="tabcontent" style="display: block;">
					   <p><b>{{ __("Published on %s", [image.time | date('M j, Y')]) }}</b></p>
					   <p>{{ image.description }}</p>
					</div>
				 </div>
			 </div>
		 </div>
		</div>
	</div>
</div>
{% endblock %}