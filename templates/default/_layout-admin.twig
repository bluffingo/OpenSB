<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	{% block head %}{% endblock %}
	{% if theme != 'vanilla' %}
	<link rel="stylesheet" id="bootstrap" href="assets/bs{% if theme == 'dark' %}-dark{% endif %}.css" type="text/css">
	{% else %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	{% endif %}
	<link rel="stylesheet" id="bootstrap_dashboard" href="bootstrap/dashboard.css" type="text/css">
	<script src="https://code.jquery.com/jquery-3.6.0.js"
		integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
	<script src="vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="assets/common.js"></script>
	<title>squareBracket Dashboard</title>
</head>
<body>
<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
  <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">squareBracket Dashboard</a>
  <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
  <div class="navbar-nav">
    <div class="nav-item text-nowrap">
      <a class="nav-link px-3" href="#">Sign out</a>
    </div>
  </div>
</header>
	{% block precontent %}{% endblock %}
	<div class="container-fluid">
		<div class="row">
			<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
		<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        Moderation
        </h6>
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('house-door-fill', 16) }} Overview
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('camera-video-fill', 16) }} Videos
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('people-fill', 16) }} Users
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('file-earmark-ruled-fill', 16) }} Audit Log
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('flag-fill', 16) }} User Reports
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('exclamation-circle-fill', 16) }} Admin Reports
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              {{ icon('hammer', 16) }} Ban
            </a>
          </li>
        </ul>

        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
        Technical
        </h6>
        <ul class="nav flex-column mb-2">
		  <li class="nav-item">
			<a class="nav-link" href="#">
			  {{ icon('server', 16) }} About Server
			</a>
		  </li>
		  <li class="nav-item">
			<a class="nav-link" href="#">
			  {{ icon('info-circle-fill', 16) }} Version
			</a>
		  </li>
        </ul>
      </div>
    </nav>
	<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
		{% block content %}{% endblock %}
		<footer class="text-center pt-3 my-2 text-muted border-top">
			<h4 class="mb-2">squareBracket Pre-Beta</h4>
				{{ __("By squareBracket contributors") }} Â· 2020-{{ 'now' | date('Y') }}
			<br><br>
			{% for menu_link in menu_links %}
						<a href="{{ menu_link.url }}" class="text-muted px-2">{{ icon(menu_link.icon, 16) }} {{ menu_link.name }}</a>
			{% endfor %}
		</footer>
	</main>
	</div>
		{% block postcontent %}{% endblock %}
	</div>
</body>
</html>