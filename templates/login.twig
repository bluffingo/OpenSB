{% extends "_layout.twig" %} 
	{% block title %}Login{% endblock%} 
	{% block precontent %}
	<div class="container">
	<h1>Login</h1>
	</div>
	{% endblock %}
	{% block content %}
		{% if error %} 
			{% autoescape %} 
				{{ error | raw }}
			{% endautoescape %} 
		{% else %} 
			{% if not success == '' %} 
				{% if success %} 
				{% else %} 
					{% set text = 'Incorrect username or password!' %} 
					{% autoescape %} 
						{{ text | raw }} 
					{% endautoescape %} 
				{% endif %} 
			{% endif %} 
		{% endif %}
		<div class="row">
		<div class="col-8">
		squareBracket is a website to share your videos to the public. With squareBracket you can:
		<ul>
		<li> Show off your favorite videos to the world.
		</li><li> Post the videos you take with your camera or smartphone
		</li><li> Securely show videos to your friends and family around the world
		</li><li> ... and much, much more!
		</li></ul>
		</div>
		<div class="col-4">		<form method="post" name="loginForm"
		id="loginForm" action="login.php">
			<div class="input-group"> 
				<span class="input-group-text" id="basic-addon1" style="width:90px">Username</span>
				<input type="text" name="username" class="form-control" aria-describedby="basic-addon1">
			</div>
			<div class="input-group"> 
				<span class="input-group-text" id="basic-addon1" style="width:90px">Password</span>
				<input type="password" name="password" class="form-control" aria-describedby="basic-addon1">
			</div>
			<input class="btn btn-primary" type="submit" value="Login" name="loginsubmit">
		</form></div>
		</div>
	{% endblock %}