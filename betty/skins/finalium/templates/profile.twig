{% extends "_layout.twig" %}

{% set title = data.username  %}

	{% block content %}
        <div class="alert alert-danger" role="alert">Temporary design.</div>
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <img class="img-rounded img-responsive" src="{{ profile_picture(data.username) }}">
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <ul>
                            <li>
                                Username: @{{ data.username }}
                            </li>
                            <li>
                                Display name: {{ data.displayname }}
                            </li>
                            <li>
                                Description:
                                {% if data.about %}
                                    {{ data.about }}
                                {% else %}
                                    <em class="text-muted">This user has no description.</em>
                                {% endif %}
                            </li>
                            <li>
                                Joined: {{ data.joined | relative_time }}
                            </li>
                            <li>
                                Last seen: {{ data.connected | relative_time }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}