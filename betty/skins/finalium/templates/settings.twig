{% extends "_layout.twig" %}

{% set title = "Settings" %}

	{% block content %}
        <div class="alert alert-danger" role="alert">Temporary design.</div>
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
        {% endif %}
        <form action="settings.php" method="post" enctype="multipart/form-data">
            <input class="form-control" type="password" name="current_pass" size="30" maxlength="256"
                   placeholder="Current password"><br>
            <input class="form-control" type="password" name="pass" size="30" maxlength="256" placeholder="New password"><br>
            <input class="form-control" type="password" name="pass2" size="30" maxlength="256"
                   placeholder="Confirm new password">
            <input type="file" name="profilePicture" id="profilePicture">
            <input class="form-control" type="text" name="title" size="45" maxlength="50" value="{{ user_data.title }}">
            <textarea class="form-control" name="about" rows="5" cols="80" wrap="virtual">{{ user_data.about }}</textarea>
            <input name="customcolor" type="color" value="{{ user_data.customcolor | default('523bb8') }}">
            <input class="btn btn-primary" type="submit" name="save" value="Save changes">
        </form>
    {% endblock %}